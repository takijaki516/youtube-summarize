generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Summaries {
  id      String @id @default(cuid())
  summary String

  Videos   Videos @relation(fields: [videosId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  videosId String
}

model Videos {
  id         String @id @default(cuid())
  title      String
  transcript String

  summaries Summaries[]
}
